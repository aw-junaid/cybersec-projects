{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Container Security Scan Report",
  "type": "object",
  "properties": {
    "scan_id": {
      "type": "string",
      "description": "Unique identifier for this scan"
    },
    "image": {
      "type": "string",
      "description": "Container image reference that was scanned"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "risk_score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "vulnerabilities": {
      "type": "object",
      "properties": {
        "critical": {
          "type": "integer",
          "minimum": 0
        },
        "high": {
          "type": "integer",
          "minimum": 0
        },
        "medium": {
          "type": "integer",
          "minimum": 0
        },
        "low": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["critical", "high", "medium", "low"]
    },
    "compliance": {
      "type": "object",
      "properties": {
        "signature_verified": {
          "type": "boolean"
        },
        "non_root_user": {
          "type": "boolean"
        },
        "no_privileged": {
          "type": "boolean"
        },
        "read_only_rootfs": {
          "type": "boolean"
        }
      }
    },
    "sbom": {
      "type": "object",
      "properties": {
        "format": {
          "type": "string"
        },
        "component_count": {
          "type": "integer"
        }
      }
    }
  },
  "required": ["scan_id", "image", "timestamp", "risk_score", "vulnerabilities"]
}
